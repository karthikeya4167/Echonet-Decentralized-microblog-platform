# ========================================
# EchoNet - Environment Configuration
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# SQLite is embedded - no connection string needed
DB_PATH=./posts.db
DB_TYPE=sqlite

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info

# Future: External Services
# IPFS_GATEWAY=https://ipfs.infura.io:5001
# REDIS_URL=redis://localhost:6379
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloudname

# Security
# JWT_SECRET=your-super-secret-jwt-key-here
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Deployment
# DEPLOYMENT_ENV=production
# DEPLOYMENT_URL=https://your-app.vercel.app
